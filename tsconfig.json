{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "lib": ["ES2015", "DOM"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./app",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "watch": true,
    "paths": {
      "@infra/*": ["./app/infra/*"],
      "@config/*": ["./app/config/*"],
      "@entities/*": ["./app/entities/*"],
      "@repositories/*": ["./app/repositories/*"]
    },
    "types": ["node"]
  },
  "include": ["app/**/*ts"],
  "exclude": ["node_modules"]
}
